<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ 'php-deploy'|trans }}{% endblock %}</title>
        {% block meta %}
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Dashboard for ansible- and php-driven deployments">
        <meta name="author" content="Marc Aschmann &copy;2015">
        {% endblock %}
        {% block stylesheets %}
        <link href="{{ asset('/assets/core.css') }}" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">{{ 'Toggle navigation'|trans }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">{{ 'php-deploy'|trans }}</a>
                </div>
                {% block header %}
                {% endblock %}
            </div>
        </nav>
        <div class="container-fluid">
            <div class="row">
                {% block body %}{% endblock %}
            </div>
        </div>
        {% block footer %}
        {% endblock %}
        <div id="asm-dialog"><div class="content"></div></div>
        {% block javascripts %}
        <script src="{{ asset('/assets/core.js') }}"></script>
        {% endblock %}
        {% block jsinit %}
            <script type="text/javascript">
                ;(function ($, undefined) {
                    window.asm = window.asm || {};
                    asm.options = asm.options || {};
                    $.extend(asm.options, {
                        locale: 'en_US',
                        env: "{{ app.environment }}"
                    });
                    asm.translations = asm.translations || {};
                    $.extend(asm.translations, {
                        key: '{{ 'test'|trans }}'
                    });

                    $('body').addClass('asm-init php-deploy {{ app.environment }}');
                })(jQuery);
            </script>
        {% endblock %}
    </body>
</html>
