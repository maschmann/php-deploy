<ol class="" id="asm-projects-list">
    {% for project in projects %}
        <li>
            <p>{{ project.name|raw }}</p>
            <div class="btn-group btn-group-xs">
                <button title="{{ 'Edit'|trans }}" type="button" class="btn btn-default btn-xs asm-edit-btn" data-link="{{ path('core_project.update') }}" aria-label="{{ 'edit'|trans }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button title="{{ 'Delete'|trans }}" type="button" class="btn btn-default btn-xs asm-delete-btn"  data-link="{{ path('core_project.delete') }}" data-id="{{ project.id }}" aria-label="{{ 'delete'|trans }}">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </div>
        </li>
    {% endfor %}
</ol>
