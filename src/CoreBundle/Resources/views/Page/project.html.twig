{% extends '::base.html.twig' %}

{% block body %}
    {{ include('CoreBundle::side-nav.partial.html.twig', {'active': 'projects'}) }}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h2>{{ project.name|raw }}</h2>
        <div class="btn-group btn-group-xs">
            <button title="{{ 'Edit'|trans }}" type="button" class="btn btn-default btn-xs asm-edit-btn" data-link="{{ path('core_project.form', {'id': project.id}) }}" aria-label="{{ 'edit'|trans }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
            <button title="{{ 'Delete'|trans }}" type="button" class="btn btn-default btn-xs asm-delete-btn"  data-link="{{ path('core_project.delete') }}" data-id="{{ project.id }}" aria-label="{{ 'delete'|trans }}">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-danger btn-xs active asm-deploy-btn" data-link="{{ path('core_project.deploy', {'id': project.id}) }}">
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>&nbsp;{{ 'project.deploy'|trans }}
            </button>
        </div>
        <hr />
        <ul class="list-group">
            <li class="list-group-item">{{ 'project.playbook'|trans }}: {{ project.playbook }}</li>
            <li class="list-group-item">{{ 'project.inventory'|trans }}: {{ project.inventory }}</li>
            <li class="list-group-item">{{ 'project.verbose'|trans }}: {{ project.verbose }}</li>
            <li class="list-group-item">{{ 'project.check'|trans }}: {{ project.check }}</li>
            <li class="list-group-item">{{ 'project.limit'|trans }}: {{ project.limit }}</li>
            <li class="list-group-item">{{ 'project.extra_vars'|trans }}: {{ project.extraVars }}</li>
            <li class="list-group-item">{{ 'project.username'|trans }}: {{ project.username }}</li>
            <li class="list-group-item">{{ 'project.password'|trans }}: {{ project.password }}</li>
            <li class="list-group-item">{{ 'project.privateKeyFile'|trans }}: {{ project.privateKeyFile }}</li>
            <li class="list-group-item">{{ 'project.vaultPassword'|trans }}: {{ project.vaultPassword }}</li>
            <li class="list-group-item">{{ 'project.vaultPasswordFile'|trans }}: {{ project.vaultPasswordFile }}</li>
            <li class="list-group-item">{{ 'project.suPassword'|trans }}: {{ project.suPassword }}</li>
            <li class="list-group-item">{{ 'project.connection'|trans }}: {{ project.connection }}</li>
            <li class="list-group-item">{{ 'project.forceHandlers'|trans }}: {{ project.forceHandlers }}</li>
            <li class="list-group-item">{{ 'project.modulePath'|trans }}: {{ project.modulePath }}</li>
            <li class="list-group-item">{{ 'project.skipPaths'|trans }}: {{ project.skipPaths }}</li>
            <li class="list-group-item">{{ 'project.startAtTask'|trans }}: {{ project.startAtTask }}</li>
            <li class="list-group-item">{{ 'project.su'|trans }}: {{ project.su }}</li>
            <li class="list-group-item">{{ 'project.suUser'|trans }}: {{ project.suUser }}</li>
            <li class="list-group-item">{{ 'project.sudoUser'|trans }}: {{ project.sudoUser }}</li>
            <li class="list-group-item">{{ 'project.tags'|trans }}: {{ project.tags }}</li>
            <li class="list-group-item">{{ 'project.timeout'|trans }}: {{ project.timeout }}</li>

            <li class="list-group-item">
                Last deployment <span class="badge">42</span>
            </li>
            <li class="list-group-item">
                Last successfull deployment <span class="badge">14</span>
            </li>
        </ul>
    </div>
{% endblock %}

{% block footer %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/assets/project.js') }}"></script>
{% endblock %}
