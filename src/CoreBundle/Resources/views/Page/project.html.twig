{% extends '::base.html.twig' %}

{% block body %}
    {{ include('CoreBundle::side-nav.partial.html.twig', {'active': 'projects'}) }}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">{{ 'Project'|trans }}</h1>
        <p>{{ project.name|raw }} ({{ project.id }})</p>
        <ul>
            <li>{{ 'project.repo' }}: {{ project.repository }}</li>
            <li>{{ 'project.ansible_path' }}: {{ project.ansiblePath }}</li>
            <li>{{ 'project.extra_vars' }}: {{ project.extraVars }}</li>
        </ul>
        <div class="btn-group btn-group-xs">
            <button title="{{ 'Edit'|trans }}" type="button" class="btn btn-default btn-xs asm-edit-btn" data-link="{{ path('core_project.form', {'id': project.id}) }}" aria-label="{{ 'edit'|trans }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
            <button title="{{ 'Delete'|trans }}" type="button" class="btn btn-default btn-xs asm-delete-btn"  data-link="{{ path('core_project.delete') }}" data-id="{{ project.id }}" aria-label="{{ 'delete'|trans }}">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
        </div>
    </div>
{% endblock %}

{% block footer %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/assets/project.js') }}"></script>
{% endblock %}
