{% extends '::base.html.twig' %}

{% block body %}
    {{ include('CoreBundle::side-nav.partial.html.twig', {'active': 'projects'}) }}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h2>{{ project.name|raw }} ({{ project.id }})</h2>
        <ul class="list-group">
            <li class="list-group-item">{{ 'project.ansible_path'|trans }}: {{ project.ansiblePath }}</li>
            <li class="list-group-item">{{ 'project.extra_vars'|trans }}: {{ project.extraVars }}</li>
            <li class="list-group-item">
                Last deployment <span class="badge">42</span>
            </li>
            <li class="list-group-item">
                Last successfull deployment <span class="badge">14</span>
            </li>
        </ul>
        <div class="btn-group btn-group-xs">
            <button title="{{ 'Edit'|trans }}" type="button" class="btn btn-default btn-xs asm-edit-btn" data-link="{{ path('core_project.form', {'id': project.id}) }}" aria-label="{{ 'edit'|trans }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
            <button title="{{ 'Delete'|trans }}" type="button" class="btn btn-default btn-xs asm-delete-btn"  data-link="{{ path('core_project.delete') }}" data-id="{{ project.id }}" aria-label="{{ 'delete'|trans }}">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
        </div>
        <button type="button" class="btn btn-danger btn-md active">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>&nbsp;{{ 'project.deploy'|trans }}
        </button>
    </div>
{% endblock %}

{% block footer %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/assets/project.js') }}"></script>
{% endblock %}
