{% extends '::base.html.twig' %}

{% block header %}
    {{ include('CoreBundle::top-nav.partial.html.twig', {'active': 'Dashboard'}) }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {{ include('CoreBundle::side-nav.partial.html.twig', {'active': 'overview'}) }}
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h1 class="page-header">{{ 'Dashboard'|trans }}</h1>

                <h2 class="sub-header">{{ 'Recent deployments'|trans }}</h2>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>{{ '#'|trans }}</th>
                            <th>{{ 'Date'|trans }}</th>
                            <th>{{ 'Project'|trans }}</th>
                            <th>{{ 'Env'|trans }}</th>
                            <th>{{ 'User'|trans }}</th>
                            <th>{{ 'State'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if deployments|length > 0 %}
                        <tr>
                            <td>1,001</td>
                            <td>Lorem</td>
                            <td>ipsum</td>
                            <td>dolor</td>
                            <td>user</td>
                            <td>sit</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6">
                                <h3>{{ 'No recent deployments!'|trans }}</h3>
                            </td>
                        </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}

{% endblock %}
