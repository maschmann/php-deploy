{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
<form action="{{ path(action) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    {{ form_widget(form) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" id="_submit" name="_submit">{{ 'create.project.submit'|trans }}</button>
        </div>
    </div>
</form>
